     // 覆盖物边界数组
        var polygonPath = [
            new AMap.LngLat(116.46, 39.93),
            new AMap.LngLat(116.44, 39.91),
            new AMap.LngLat(116.49, 39.91)
        ];

        // 创建面覆盖物
        var polygon = new AMap.Polygon({
            path: polygonPath
        });

        addSeveralOverlayButton.onclick = function () {
            map.add(polygon);
        };